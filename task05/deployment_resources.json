{
  "lambda-basic-execution": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:UpdateItem",
            "dynamodb:DeleteItem"
          ],
          "Effect": "Allow",
          "Resource": "*"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy"
  },
  "api_handler-role": {
    "predefined_policies": [],
    "principal_service": "lambda",
    "custom_policies": [
      "lambda-basic-execution"
    ],
    "resource_type": "iam_role",
    "allowed_accounts": [
      "${account_id}"
    ]
  },
  "{target_table}": {
    "resource_type": "dynamodb_table",
    "hash_key_name": "id",
    "hash_key_type": "S",
    "read_capacity": 5,
    "write_capacity":5,
    "ranges": [
      {
        "range_key": "createdAt",
        "range_key_type": "S"
      }
    ]
  },
  "task5_api": {
    "deploy_stage": "api",
    "resource_type": "api_gateway",
    "dependencies": [
      {
        "resource_name": "api_handler",
        "resource_type": "lambda"
      }
    ],
    "resources": {
      "/events": {
        "enable_cors": true,
        "POST": {
          "integration_type": "lambda",
          "lambda_name": "api_handler",
          "authorization_type": "NONE"
        }
      }
    }
  }
}